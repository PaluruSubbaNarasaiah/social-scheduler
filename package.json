    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "node-cron": "^3.0.2",
    "openai": "^4.0.0",
    "razorpay": "^2.9.2",
    "axios": "^1.5.0",
    "twitter-api-v2": "^1.15.0",
    "facebook-nodejs-business-sdk": "^18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
